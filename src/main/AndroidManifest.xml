        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/round_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UserInterface.MainActivity"><intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".UserInterface.LoginActivity" />
        <activity android:name=".UserInterface.SignUpActivity" />
        <activity android:name=".UserInterface.ForgetPasswordActivity" />
        <activity android:name=".UserInterface.AccessActivity"/>
        <activity android:name="UserInterface.BusStopActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCQFfTiXZZ5Ww-oVgbd8Ug_dCW1XRoeRPg">
        </meta-data>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version">
