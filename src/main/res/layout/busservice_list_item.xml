<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single list item that displays a bus service -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bus_stop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="16sp"
            tools:text="Bus Stop 1" />

        <TextView
            android:id="@+id/bus_stop_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            tools:text="Bus Code 123" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/next_arrival_1_wca"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wheelchair"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/next_arrival_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="5"
            android:textSize="24dp"
            android:layout_toRightOf="@+id/next_arrival_1_wca"/>

        <ImageView
            android:id="@+id/next_arrival_2_wca"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wheelchair"
            android:layout_toRightOf="@+id/next_arrival_1"/>
        <TextView
            android:id="@+id/next_arrival_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="10"
            android:textSize="24dp"
            android:layout_toRightOf="@id/next_arrival_2_wca"/>

        <ImageView
            android:id="@+id/next_arrival_3_wca"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wheelchair"
            android:layout_toRightOf="@id/next_arrival_2"/>
        <TextView
            android:id="@+id/next_arrival_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="20"
            android:textSize="24dp"
            android:layout_toRightOf="@id/next_arrival_3_wca"/>
    </RelativeLayout>



</LinearLayout>